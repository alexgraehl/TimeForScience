# -*-Sh-*-  <-- Tells emacs what syntax highlighting to use

set horizontal-scroll-mode off
set mark-directories       on


set mark-symlinked-directories on
## Fixes it so that tab-completion automatically adds a '/' to symlinked directories, just like real directories.

set completion-ignore-case on



## This means that when you hit "tab" to auto-complete,
## and there is more than one completion, instead of just
## showing you the ENTIRE name, it shows "..." and then the
## part that is *different*
set completion-prefix-display-length 6

set meta-flag on
set input-meta on
set output-meta on

set show-all-if-ambiguous on
set show-all-if-unmodified on
set visible-stats on

"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[5~": beginning-of-history
"\e[6~": end-of-history
"\e[3~": delete-char
"\e[2~": quoted-insert
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

"\ej": backward-char
"\el": forward-char

"\eJ": backward-word
"\eL": forward-word

"\ei": previous-history
"\ek": next-history



