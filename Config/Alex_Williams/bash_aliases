alias tattle="echo -n '\033[45m\033[33m'; ps aux | tail -n +2 | sort --reverse -k 3,3 | head -n 5 | perl -p -e 's/[ ]+/\t/g' | cut -f 1,3,4,11 | cap.pl 'USER,CPU,MEM,TASK' | sheet.pl \
--ht=75 --trunc=60 | tail -n +2 ; echo -n '\033[0m'"

# GNU Make-related
alias  make='make --warn-undefined-variables --print-directory'
alias     m='make'
alias   mcm='make clean && make'
function remake {
    ## Lets you type "remake" to remove a file and then use GNU make to try to re-generate it
	trash.pl "$1" && make --warn-undefined-variables --print-directory "$1"
}



