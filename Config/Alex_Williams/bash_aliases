# Convert a Mac-style line-ending file to a UNIX one
# Useful for when you save a file in Excel and then UNIX won't read it.
function mac2unix {
    cat "$1" | tr '\r' '\n'
}

# Convert a Windows-style line-ending file to a UNIX one
# Useful for when you save a file in Excel and then UNIX won't read it.
function dos2unix {
    cat "$1" | tr -d '\r'
}




